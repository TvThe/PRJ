        <servlet-name>SearchDocument</servlet-name>
        <url-pattern>/searchdocument</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDocument</servlet-name>
        <url-pattern>/deletedocument</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertDocument</servlet-name>
        <url-pattern>/insertdocument</url-pattern>
