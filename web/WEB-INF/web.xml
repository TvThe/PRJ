    <servlet>
        <servlet-name>AuthenticController</servlet-name>
        <servlet-class>controller.auth.Authentic</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controller.management.SearchController</servlet-class>
